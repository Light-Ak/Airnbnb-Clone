<% layout('layouts/boilerplate') %>

<style>
  /* Remove all side padding from layout */
  body, html {
    padding: 0;
    margin: 0;
    overflow-x: hidden;
  }

  /* Make container truly full width */
  .fullwidth-container {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }
</style>

<div class="container-fluid fullwidth-container mt-4 px-0">
  <div class="row row-cols-xxl-5 row-cols-xl-5 row-cols-lg-4 row-cols-md-2 row-cols-1 g-4 mx-0">
    <% for (let listing of listings) { %>
      <div class="col d-flex align-items-stretch">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark w-100">
          <div class="card h-100 w-100 shadow-sm border-0">
            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-2"><%= listing.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
              </h6>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
