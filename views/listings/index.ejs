<% layout('layouts/boilerplate') %>
<div class="container mt-4">
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-1 g-4">
        <% for(let listing of listings) { %>
        <div class="col d-flex align-items-stretch">
            <div class="card h-100 w-100 shadow-sm border-0">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-2"><a href="/listings/<%= listing._id %>"><%= listing.title %></a></h5>
                    <h6 class="card-subtitle mb-2 text-muted">&#8377;<%=listing.price.toLocaleString("en-IN")%> / night</h6>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>